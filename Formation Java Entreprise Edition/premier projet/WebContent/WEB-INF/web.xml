<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>premier projet</display-name>
 
  <!-- Déclaration de la servlet -->
  <servlet>
  
	  <servlet-name>PremiereServelet</servlet-name>
	  <servlet-class>dz.premierprojet.servlet.PremiereServelet</servlet-class>
	  
  </servlet>
  <servlet>
  
	  <servlet-name>Servletjsp</servlet-name>
	  <servlet-class>dz.premierprojet.servlet.Servletjsp</servlet-class>
	  
  </servlet>
  
  <!-- Faire correspondre une URL à la servlet  le mapping the most important
   lui donner une adresse dans le server tomcat, comment la mapper ? -->
   
   <servlet-mapping> 
   	
   		<servlet-name>PremiereServelet</servlet-name>
   		<url-pattern>/PremiereServelet</url-pattern>
   
   
   </servlet-mapping>
   
    <servlet-mapping> 
   	
   		<servlet-name>Servletjsp</servlet-name>
   		<url-pattern>/Servletjsp</url-pattern>
   
   
   </servlet-mapping>
   <servlet>
   		
  		<servlet-name>TraiteFormulaire</servlet-name>
   		<servlet-class>dz.premierprojet.servlet.TraiteFormulaire</servlet-class>
   
   </servlet>
    <servlet-mapping> 
   	
   		<servlet-name>TraiteFormulaire</servlet-name>
   		<url-pattern>/TraiteFormulaire</url-pattern>
   
   
   </servlet-mapping>
  
  
  
  
  
  
  
  
  
  
  
  
  
  
